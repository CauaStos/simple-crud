generator client {
    provider = "prisma-client"
    output   = "../prisma/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id        Int      @id @default(autoincrement()) @map("id")
    name      String   @map("nome")
    email     String   @unique @map("email")
    createdAt DateTime @default(now()) @map("criadoEm")
    updatedAt DateTime @updatedAt @map("atualizadoEm")

    campaigns Campaign[]

    @@index([name(ops: raw("gin_trgm_ops"))], type: Gin, name: "usuario_nome_trgm_idx")
    @@index([email(ops: raw("gin_trgm_ops"))], type: Gin, name: "usuario_email_trgm_idx")
    @@map("Usuario")
}

model Campaign {
    id          Int      @id @default(autoincrement()) @map("id")
    name        String   @map("nome")
    description String?  @map("descricao")
    isActive    Boolean  @default(true) @map("ativo")
    createdAt   DateTime @default(now()) @map("criadoEm")
    updatedAt   DateTime @updatedAt @map("atualizadoEm")

    userId Int  @map("usuarioId")
    user   User @relation(fields: [userId], references: [id])

    @@index([name(ops: raw("gin_trgm_ops"))], type: Gin, name: "campanha_nome_trgm_idx")
    @@index([description(ops: raw("gin_trgm_ops"))], type: Gin, name: "campanha_descricao_trgm_idx")
    @@map("Campanha")
}
